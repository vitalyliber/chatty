json = {}
json[:chats] = @chat_users.map do |chat_user|
  opponent = chat_user.chat.chat_users.select {|el| el.user.id != @current_user.id}[0]
  {
      unread_count: opponent.unread_count,
      updated_at: opponent.updated_at.iso8601,
      name: opponent.user.name,
      avatar_url: opponent.user.avatar_url,
      external_key: opponent.user.external_key,
  }
end
